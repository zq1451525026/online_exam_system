<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lanqiao.mapper.UserMapper">

    <resultMap id="baseUserResult" type="UsersInfo">
        <id property="userId" column="USER_ID"/>
        <id property="userName" column="USER_NAME"/>
        <id property="password" column="PASSWORD"/>
        <id property="tel" column="TEL"/>
        <id property="email" column="EMAIL"/>

    </resultMap>
    <select id="selectByLogin" resultMap="baseUserResult" parameterType="UsersInfo">
        SELECT * FROM USERSINFO WHERE USER_NAME = #{userName} AND PASSWORD = #{password}
    </select>

    <insert id="insertUser" parameterType="UsersInfo">
        <selectKey keyProperty="userId" resultType="int" order="BEFORE">
            SELECT USERSINFO_SEQ.nextval FROM dual
        </selectKey>
        INSERT INTO USERSINFO VALUES (#{userId},#{userName},#{password},#{tel,jdbcType=CHAR},#{email,jdbcType=VARCHAR})
    </insert>


</mapper>